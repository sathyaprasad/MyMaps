<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/callout_width"
    android:layout_height="@dimen/callout_height"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="350dp"
        android:layout_height="35dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/holo_blue_dark"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/callout_title"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:paddingLeft="3dp"
                android:paddingTop="5dp"
                android:text="@string/callout_title"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/callout_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:contentDescription="@string/image_description"
                android:src="@drawable/icon_back"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/callout_next"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:contentDescription="@string/image_description"
                android:src="@drawable/icon_next"
                android:visibility="gone" />
        </LinearLayout>

        <ImageView
            android:id="@+id/callout_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="5dp"
            android:layout_marginTop="0dp"
            android:contentDescription="@string/image_description"
            android:scaleType="fitXY"
            android:src="@drawable/close_icon_white" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/callout_container"
        android:layout_width="match_parent"
        android:layout_height="265dp"
        android:background="@android:color/white"
        android:orientation="vertical" >
    </LinearLayout>

</LinearLayout>